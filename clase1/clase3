# MULTIPLICACION BASADA EN SUMA
def multiplicacion_por_sumas(a, b):
    if b == 0:
        return 0
    elif b < 0:
        return -multiplicacion_por_sumas(a, -b)
    else:
        return a + multiplicacion_por_sumas(a, b - 1)

resultado = multiplicacion_por_sumas(5, 2)
print("Resultado de la multiplicaciÃ³n:", resultado)  
